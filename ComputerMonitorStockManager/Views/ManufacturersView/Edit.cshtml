@model DomainLayer.Models.Manufacturers

<head>
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            border: 1px solid #006600;
            background-color: #f1f1c1;
        }

        li {
            float: left;
        }

            li a {
                display: block;
                color: #666;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                li a:hover:not(.active) {
                    color: white;
                    background-color: #006600;
                }
    </style>
</head>
<body>

    <ul>
        <li><a href="@Url.Action("Index","Home")">Home</a></li>
        <li><a href="@Url.Action("Manufacturers","ManufacturersView")">Manufacturers</a></li>
        <li><a href="@Url.Action("Monitors","MonitorsView")">Monitors</a></li>
    </ul>

</body>

@{      
    ViewData["Title"] = "Edit";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            background-color: #f1f1c1;
        }

        * {
            box-sizing: border-box;
        }

        .form-group {
            padding: 12px;
            background-color: white;
        }

        .col-md-10 {
            width: 100%;
            padding: 10px;
            margin: 5px 0 20px 0;
            display: inline-block;
            border: none;
            background: #f1f1c1;
        }

        .form-control {
            width: 100% !important;
            height: 25px;
            min-width: 180px;
            background-color: white;
            border: none;
            outline: none;
        }

        hr {
            border: 1px solid #f1f1f1;
            margin-bottom: 20px;
        }

        .btn {
            background-color: #006600;
            color: white;
            font-size: 25px;
            height: 60px;
            width: 60px;
            text-align: center;
            padding: 20px 20px;
            margin: 1px 0;
            border: none;
            cursor: pointer;
            width: 100%;
            opacity: 10;
        }

            .btn:hover {
                opacity: 1;
            }

        .text-danger {
            color: #e60000
        }

    </style>
</head>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h1>Edit manufacturer</h1>
            <p>Fill in this form to update a manufacturer.</p>

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.Name) } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.PhoneNumber) } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn" />
                </div>
            </div>
        </div>
    }
</body>
</html>

<div>
    @Html.ActionLink("Back to list of manufacturers", "Manufacturers")
</div>

